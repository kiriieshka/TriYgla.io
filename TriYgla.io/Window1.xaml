<Window x:Class="TriangleApp.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Result" Height="200" Width="460"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Border CornerRadius="20" Background="#FFFAF3E0" BorderBrush="LightGray" BorderThickness="2">
        <Grid Margin="20">
            <Label Content="Окошко вывода информации о треугольнике"  FontSize="18" FontWeight="Bold" Foreground="#6A737B" Margin="0,16,0,0"/>
            <TextBlock x:Name="ResultTextBlock" FontSize="18" Foreground="#6A737B" 
                       TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button Content="X" 
        FontSize="16" FontWeight="Bold" 
        Padding="10,5" Margin="400,-20,-20,140"
        Click="Close_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#B4D8E7" CornerRadius="15" Padding="10" BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
